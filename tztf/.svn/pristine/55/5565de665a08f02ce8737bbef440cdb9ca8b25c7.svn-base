@charset "UTF-8";
body{
	overflow: auto;
}
/* 遮罩层 */
.shadow{
	position:absolute;
	z-index:10;
	background-color:rgba(0,0,0,0.36);
	height:100%;
	width:100%;
	display:none;
}
.shadow i{
	display:block;
	position:absolute;
	height:0.933333rem;
	width:0.933333rem;
}
.add-person{
	right:0.4rem;
	bottom:1.266667rem;
	background-image:url(../images/add-person.png);
	background-size:100% 100%;
}
.add-group{
	right:1.4rem;
	bottom:	0.266667rem;
	background-image:url(../images/add-group.png);
	background-size:100% 100%;
}
/* 添加按钮 */
.add{
	diaplay:block;
	position:absolute;
	right:0.4rem;
	bottom:	0.266667rem;
	height:0.6rem;
	width:0.6rem;
	z-index:11;
	background-image:url(../images/add-mini.png);
	background-size:100% 100%;
}
.container{	
	background-color: #fff;
	padding: 0 0.4rem;
	height: calc(100% - 1.89rem);
	overflow: auto;
	padding-top: 0.266667rem;
}
.container>div{
	width:30%;
	height:3.266667rem;
	border:2px solid #e6e6e6;
	box-shadow: 0 0 0.266667rem #e6e6e6;
	border-radius: 5px;
	-moz-border-radius: 5px;
	text-align:center;
	position:relative;
	margin:0 0.8% 0.2rem 0.8%;
    float: left;
}
.container>div>img{
	width:1.666667rem;
	margin:0 auto;
	margin-top:0.333333rem;
}
.groupName{
	height:0.4rem;
	line-height: 0.4rem;
	width:2.133333rem;
	position:absolute;
	left:0;
	right:0;
	margin:auto;
	top:1.866667rem;
	border:1px solid #e6e6e6;
	border-radius: 5px;
	z-index: 3;
	overflow: hidden;
	background:#fff;
}
.peopleNum{
	height:0.4rem;
	line-height: 0.4rem;
	width:1.6rem;
	position:absolute;
	left:0;
	right:0;
	bottom:0.266667rem;
	margin:auto;
	border:1px solid #3399ff;
	border-radius:5px;
	-moz-border-radius:5px;
	overflow: hidden;
}