
/*地图*/
#map{
    /*background: url(../images/map_img.png) no-repeat;*/
    width:1200px;
    display:block;
    position:relative;
}

/*当前实况*/
.current_live{
    width:880px;
    height:536px;
    background:#FFF;
    position:absolute;
    z-index:999;
    top: 10%;
    left: 20%;
    display:none;
    padding:5px;
}
.on_live.current_live{
    display:block;
}
/*时间*/
.current_live .live_hd{
    line-height:28px;
    padding:5px;
}
.current_live .live_hd.pt15{
    padding-top:15px;
}
.current_live .live_hd h2{
    font-size:18px;
    display:inline-block;
}
.current_live .live_hd .time{
    font-size:12px;
    color:#666;
    display:inline-block;
}
.current_live .live_hd .time span{
    padding-left:5px;
}
/*meteorological*/
.meteorological_box{
    height:120px;
    width:100%;
    border-bottom:1px dotted #666;
}
.meteorological_box > ul > li{
    width:240px;
    text-align:center;
    display:inline-table;
    padding-top:20px;
}
.meteorological_box > ul > li:first-child{
    padding-left:40px;
}
.meteorological_box > ul > li .f48{
    font-size:48px;
}
.meteorological_box > ul > li .f24{
    font-size:24px;
}
.meteorological_box > ul > li p{
    font-size:18px;
    color:#3d3d3d;
}
.meteorological_box > ul > li.temp span{
    color: #ff0006;
}
.meteorological_box > ul > li.wind span{
    color: #3eef70;
}
.meteorological_box > ul > li.rain span{
    color: #00c3ff;
}
/*温度变化表*/
.weather_chart{
    width:460px;
    height:28px;
    padding-top:20px;
    margin: 0 auto;
}
.weather_chart > ul{
    overflow: hidden;
    zoom: 1;
}
.weather_chart > ul > li{
    width:150px;
    height:28px;
    line-height:28px;
    display:inline-table;
    text-align:center;
    background:#8ec8e5;
    border-radius:15px;
    behavior: url(../static/js/PIE/PIE.htc);  
}
.weather_chart > ul > li a span{
    color:#FFF;
    font-size:12px;
}
.weather_chart > ul > li a span.f14{
    font-size:14px;
}
.weather_chart > ul > li:hover,.weather_chart > ul > li.curr{
    background:#d32e2e;
}
/*功能按钮*/
.function_btn{
    position: relative;
    float: right;
    right: 100px;
    top:8px;
}
.function_btn a{
    width:24px;
    height:20px;
    display:inline-block;
}
.print_btn{
    background:url(../static/images/print_btn.png) no-repeat;
}
.download_btn{
    background:url(../static/images/download_btn.png) no-repeat;
}
/*切换图表*/
.weather_con {
    padding:5px;
}
.weather_con > li{
    display:none;
}
.weather_con > li.block{
    display:block;
}

/*左右滑动*/
.flexslider {
    margin: 0px auto 20px;
    position: relative;
    width: 847px;
    height: 212px;
    zoom: 1;
    top: 42px;
    border:1px solid #ddd;
}

.flexslider .slides li {
    width: 100%;
    height: 100%;
}

.flex-direction-nav a {
    position: absolute;
    width: 8px;
    height: 20px;
    top: -40px;
    background: url(../images/focus_btn.png) no-repeat;
}

.flex-direction-nav .flex-next {
    right: 0px;
    background-position:-10px 0px;
}

.flex-direction-nav .flex-prev {
    right: 32px;
}





/*弹出*/
.m-reporting{
    width:627px;
    height:615px;
    padding:41px 137px 41px 125px;
    background:#FFF;
    display:none;
    position: absolute;
    top: 5%;
    z-index: 999;
    left: 18%;

}
.m-reporting.on_report{
    display:block;
}
.m-reporting a.closed{
    position:absolute;
}
.m-reporting .report_hd{
    border-bottom:5px solid red;
    padding-bottom:15px;
    width:100%;
}
.m-reporting h2{
    font-size:36px;
    color:red;
    line-height:62px;
    text-align:center;
}
.m-reporting p{
    padding-top:35px;
    padding-left:5px;
    font-size:14px;
    line-height:25px;
}
.report_bd{
    padding:0 45px;
}
.report_bd h3{
    font-size:24px;
    line-height:115px;
    text-align:center;
}
.report_bd p{
    font-size:18px;
}
.report_bd p span{
    line-height:25px;
}
/*监测站展示弹框*/

.olPopupContent{
    padding:10px;
}
.poptel .poptel_tit{
    color:#4d4ad9;
    font-size:14px;
    width:128px;
    display:block;
    line-height:25px;
}
.poptel tbody tr{
    display:inline-block;
}
.poptel tbody tr.pl10{
    padding-left:20px;
}
.poptel tbody tr.pl10 td{
    color:#737373;
    line-height:22px;
}
.poptel tbody tr.pl10 td a{
    color:#4aa9d9;
    text-decoration:underline;
}
.poptel tbody tr td{
    display:block;
}
.poptel img{
    width:58px;
    height:40px;
    margin-top: 12px;
}
.poptel h3,.poptel .unit{
    color:#4d4ad9;
    display:inline-block;
}
.poptel h3{
    font-size:18px;
}
.poptel .temp{
    width:58px;
    text-align:center;
}
.poptel .unit{
    font-size:12px;
    font-weight:600;
}
/*警报弹窗*/
.poptel_warning{
    width:220px;
    min-height:85px;
    padding:5px 20px 5px 10px;
}
.poptel_warning .poptel_tit{
    line-height:30px;
    color:#4d4ad9;
    font-size:17px;
}
.poptel_warning .temp{
    line-height:25px;
}

/*地图多选*/

.m-mapcheckbox{
    padding: 0 5px;
    height: 20px;
    margin-top: 9px;
    position: absolute;
    top:10px;
    right:10px;
}
.m-mapcheckbox label{
    display:inline-block;
    float:left;
    padding-right:5px;
}
.m-mapcheckbox input{
    width:15px;
    height:15px;
    float:left;
    margin-top:2px;
}
.m-mapbox{
    position:absolute;
    top: 75px;
    right: 75px;
}
.m-mapbox div{
    width:100px;
    height:100px;
    border:1px solid red;
}