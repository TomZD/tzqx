/*不显示滚动条*/
::-webkit-scrollbar{
	display:none;
}
.record-time{
	position: relative;
	margin-top: 0.266667rem;
	width: 100%;
	height: 1.133333rem;
	padding: 0 0.4rem;
	background-color: #fff;
	box-sizing: border-box;
}
.record-time span{
	line-height: 1.133333rem;
}
.record-time span:nth-child(1){
	font-size: 0.426667rem;
    color: #333;
    line-height: 1.133333rem;
    display: inline-block;
    height: 1.133333rem;
    float: left;
}
.record-time span:nth-child(2){
	position:relative;
	z-index:2;
	display: inline-block;
    line-height: 1.133333rem;
    font-size: 0.4rem;
    height: 1.133333rem;
    color: #666;
    width: calc(100% - 2.416667rem);
    margin-left: 0.666667rem;
}
.record-time i{
	display: block;
	width: 0.533333rem;
	height: 0.533333rem;
	right: 0.4rem;
	background-image: url(../images/date.png);
	background-size: 100% 100%;
}
.record-detail{
	position:relative;
	margin-top: 0.266667rem;
	padding: 0 0.4rem;
	padding-bottom: 0.4rem;
	width: 100%;
	box-sizing: border-box;
	background-color: #fff;
}
.record-detail span:nth-child(1){
	display: block;
	height: 1.133333rem;
	line-height: 1.133333rem;
	font-size: 0.426667rem;
	color: #333;
}
.record-detail span:nth-child(2){
	display: block;
	width: 100%;
	color: #666;
	font-size: 0.4rem;
	line-height: 0.613333rem;
	padding: 0.266667rem;
	border:1px solid #e6e6e6;
	box-sizing: border-box;
}
.skim-more{
	float: right;
	margin-top: 0.266667rem;
	margin-right: 0.4rem;
	font-size: 0.32rem;
	color: #41a8ff;
	line-height: 0.533333rem;
	text-align: right;
}
/*文本框 */
.desc{
	width:100%;
	font-size: 0.4rem;
	color: #666;
	padding: 0.266667rem;
	border:1px solid #e6e6e6;
	box-sizing: border-box;
}
.desc+span{
	position:absolute;
	bottom:0.6rem;
	right:0.6rem;
}
.footer{
	position:absolute;
	bottom:0.4rem;
	left:0.4rem;
	text-align: center;
}
.footer>button{
	width:9.133333rem;
	height:1.173333rem;
	background:#3399ff;
	border-radius:10px;
	color:#fff;
	font-size: 0.533333rem;
}