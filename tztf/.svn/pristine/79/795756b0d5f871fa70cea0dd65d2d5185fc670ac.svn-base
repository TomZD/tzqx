.m-pan {
  border: 1px solid #2664bb;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.75);
}
.m-pan-hd {
  background: url(/static/images/bg.png) center left repeat-x;
  zoom: 1;
}
.m-pan-hd:after {
  content: '';
  display: table;
  clear: both;
}
.m-pan-hd .title {
  line-height: 29px;
  color: white;
  font-size: 14px;
  float: left;
}
.m-pan-hd .label {
  float: left;
  padding: 5px 10px;
}
.m-pan-hd .btn-select {
  margin-top: -1px;
  margin-bottom: -1px;
  margin-right: -1px;
}
.m-pan-hd .btn-tabs {
  box-shadow: none;
}
.m-pan-hd .btn-tab {
  margin-top: -1px;
  margin-right: -1px;
  box-shadow: none;
}
.m-pan-bd {
  background: #ecf3fa;
  zoom: 1;
  overflow: auto;
}
.m-pan-bd:after {
  content: '';
  display: table;
  clear: both;
}
.m-pan-form {
  width: 370px;
  margin: 0 auto;
}
.m-pan-set {
  width: 610px;
  margin: 0 auto;
}
.m-pan-set .m-pan-bd {
  padding: 20px;
  background: #ecf3fa;
}
.m-pan-set .m-pan-bd .ico-list {
  background: url(/static/components/pan/images/ico-list.png) no-repeat left center;
}
.m-pan-set .m-pan-bd .ico-del {
  background: url(/static/components/pan/images/ico-del.png) center center no-repeat;
}
.m-pan-set .m-pan-bd .set-box {
  width: 270px;
}
.m-pan-set .m-pan-bd .set-box-hd {
  line-height: 30px;
}
.m-pan-set .m-pan-bd .set-box-bd {
  border: 1px solid #b3b3b3;
  background: #fff;
  padding: 10px;
  height: 300px;
}
.m-pan-set .m-pan-bd .set-btns {
  text-align: center;
  padding: 15px 0;
}
.m-pan-set .m-pan-bd .set-list {
  background: #e3edf7;
  padding: 7px 5px;
  margin-bottom: 5px;
  line-height: 16px;
  color: #245eac;
  overflow: hidden;
}
.m-pan-set .m-pan-bd .set-list .ico-del {
  float: right;
}
.m-table table {
  width: 100%;
  table-layout: fixed;
}
.m-table td {
  vertical-align: middle;
  text-align: center;
}
.m-table thead {
  background: url(/static/images/bg.png) center left repeat-x;
}
.m-table thead td {
  color: white;
  height: 40px;
}
.m-table thead.sub {
  border-bottom: 1px solid #999;
  border-top: 1px solid #999;
  background-color: #dadada;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#dadada));
  background-image: -webkit-linear-gradient(top, #ffffff, #dadada);
  background-image: -moz-linear-gradient(top, #ffffff, #dadada);
  background-image: -o-linear-gradient(top, #ffffff, #dadada);
  background-image: -ms-linear-gradient(top, #ffffff, #dadada);
  background-image: linear-gradient(top, #ffffff, #dadada);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#ffffffff, endColorstr=#ffdadada, GradientType=0);
}
.m-table thead.sub td {
  color: #333;
}
.m-table tbody td {
  background: #ecf3fb;
  padding: 10px;
}
.m-table tbody tr:nth-child(odd) td {
  background: #e3edf7;
}
.m-table tbody tr:hover td {
  background: #aecdf9;
}
.m-table .status span {
  display: inline-block;
  *display: inline;
  *zoom: 1;
  line-height: 22px;
  padding: 0 5px;
  color: white;
  font-size: 12px;
  margin: 2px;
}
.m-table .status .sos {
  background: #de2e39;
}
.m-table .status .warn {
  background: #e19920;
}
.m-thead {
  box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.35);
  border: 1px solid #999;
  border-radius: 3px;
  background-color: #dadada;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#dadada));
  background-image: -webkit-linear-gradient(top, #ffffff, #dadada);
  background-image: -moz-linear-gradient(top, #ffffff, #dadada);
  background-image: -o-linear-gradient(top, #ffffff, #dadada);
  background-image: -ms-linear-gradient(top, #ffffff, #dadada);
  background-image: linear-gradient(top, #ffffff, #dadada);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#ffffffff, endColorstr=#ffdadada, GradientType=0);
  position: relative;
}
.m-thead table {
  width: 100%;
  table-layout: fixed;
  text-align: center;
  font-weight: bold;
}
.m-thead td {
  padding: 10px;
}
.m-aside-table {
  position: absolute;
  right: 0;
  top: 60px;
  bottom: 20px;
  _bottom: auto;
  padding: 10px;
  width: 400px;
  border-radius: 5px 0 0 5px;
  background: #ecf3fa;
  border: 1px solid #154f9d;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.75);
  overflow: auto;
}
.m-aside-table table {
  width: 100%;
}
.m-aside-table-hd {
  line-height: 40px;
  font-weight: bold;
  color: white;
  padding-left: 15px;
  background: #448aca;
  border-radius: 5px;
  margin-bottom: 10px;
}
.m-aside-table-bd {
  background: #fff;
}
.m-aside-table-bd table {
  width: 100%;
  border: 1px solid #cbcbcb;
  table-layout: fixed;
}
.m-aside-table-bd td {
  vertical-align: middle;
  padding: 10px;
  text-align: center;
}
.m-aside-table-bd thead td {
  background: #d7d7d7;
  font-weight: bold;
}
.m-aside-table-bd tbody td {
  border-top: 1px solid #cbcbcb;
}
.m-aside-table-btn {
  position: absolute;
  top: 50%;
  right: 421px;
  height: 100px;
  margin-top: -50px;
  line-height: 100px;
  width: 25px;
  background: #ecf3fa url(/static/components/pan/images/btn.png) center center no-repeat;
  cursor: pointer;
  border: 1px solid #154f9d;
  border-right: 0;
  border-radius: 5px 0 0 5px;
  box-shadow: -8px -1px 10px -8px rgba(0, 0, 0, 0.75);
}
.m-aside-table-btn-on {
  right: 0;
}
