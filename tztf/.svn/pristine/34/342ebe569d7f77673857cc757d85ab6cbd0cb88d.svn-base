			 //修改保存
            function updatePassword(){
                var isOk = true;
                var npwd = $("#npwd").val();
                var npwd2 = $("#npwd2").val();
                if(npwd == ""){
                    isOk = false;
                    layer.msg("请输入新密码！");
                    return false;
                }
				if(npwd2 == ""){
                    isOk = false;
                    layer.msg("请输入新密码确认！");
                    return false;
                }
				if(npwd!=npwd2){
					isOk = false;
                    layer.msg("请输入新密码和新密码不一致！");
                    return false;
				}
                if(isOk == true){
                    $("#password").val(npwd);
                    var password = $("#password").val();
                    var id = $("#id2").val();
                    //alert(id);
                    
                    $.ajax({
                        cache: true,
                        type: "POST",
                        url:"${base}/sys/user/savePwd",
                        data:{"id":id,"password":password},// 你的formid
                        async: false,
                        error: function(request) {
                           // alert("Connection error");
                            layer.msg("Connection error");
                        },
                        success: function(data) {
                            layer.msg("修改成功");
                        }
                    });
                }
            }
			
