@charset "utf-8";
.m-page{
    display: block;
    width: 100%;
    height: 100%;
    background: url("../../../static/images/login_bk.png") 0 0 no-repeat;
    background-size: 100% 100%;
    display: table;
}
.m-login{
    /*position: relative;*/
    /*top: 50%;*/
    /*transform: translate(0,-50%);*/
    /*-ms-transform:translate(0,-50%);     !* IE 9 *!*/
    /*-moz-transform:translate(0,-50%);    !* Firefox *!*/
    /*-webkit-transform:translate(0,-50%); !* Safari 和 Chrome *!*/
    /*-o-transform:translate(0,-50%); !* Opera *!*/
    display: table-cell;
    vertical-align: middle;
    width: 100%;
}
.login-hd{
    display: inline-block;
    text-align: center;
    width: 100%;
}
.login-hd h2{
    font-size: 64px;
    font-family: "SimHei";
    color: #fff;
    line-height: 64px;
    margin-top: 4vh;
    margin-bottom: 6vh;
    font-weight: 100;
}
.login-hd img{
    width: 8%;
}
.login-bd{
    height: 240px;
    width: 590px;
    border-radius: 10px;
    background: #fff;
    margin: 0 auto;
    padding: 0 30px;
}
button.login{
    width: 590px;
    height: 60px;
    line-height: 60px;
    font-size: 24px;
    background: #2d5a9d;
    border-radius: 20px;
    margin:0 auto;
    margin-top:40px;
    display: inherit;
    color: #fff;
}
.login-bd li{
    width: 100%;
    border-bottom: 2px solid #e6e6e6;
    height: 95px;
    line-height: 60px;
    position: relative;
}
.login-bd i{
    display: block;
    float: left;
    width: 25px;
    height: 30px;
    margin-left: 32px;
    position: absolute;
    bottom: 20px;
}
.login-bd .user_name i{
    background: url("../../../static/images/user_name.png") 0 0 no-repeat;
}
.login-bd .user_password i{
    background: url("../../../static/images/password.png") 0 0 no-repeat;
}
.login-bd input{
    font-size: 24px;
    line-height: 64px;
    height:64px;
    position: absolute;
    bottom: 0px;
    left: 80px;
    color: #aaaaaa;
     width: 500px;
}