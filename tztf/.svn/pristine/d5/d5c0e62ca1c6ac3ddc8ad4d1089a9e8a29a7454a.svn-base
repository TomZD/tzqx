.ico-20-date {
  background: url(/static/components/ui/icons/images/ico-date.png) center center no-repeat;
}
.u-textarea,
.u-input {
  display: inline-block;
  *display: inline;
  *zoom: 1;
  border: 1px solid #b3b3b3;
  background: #fff;
  padding-left: 5px;
  padding-right: 5px;
  color: #333;
}
.u-textarea:hover,
.u-input:hover {
  border-color: #2664bb;
}
.u-input {
  height: 26px;
  line-height: 26px;
  vertical-align: middle;
}
.u-input input {
  border: 0;
  background: none;
  outline: none;
  color: #b2b2b2;
  vertical-align: top;
  padding-top: 5px;
  padding-bottom: 5px;
  line-height: 16px;
  height: 16px;
}
.u-input .ico-16 {
  margin-top: 5px;
}
.u-input .ico-20 {
  margin-top: 3px;
}
.u-input:hover {
  border-color: #2664bb;
}
.u-input:hover input {
  color: #333;
}
.u-textarea {
  padding-top: 5px;
  padding-bottom: 5px;
}
.u-textarea textarea {
  border: 0;
  width: 100%;
  height: 100%;
  background: none;
  vertical-align: top;
  outline: none;
  line-height: 16px;
}
.u-range {
  display: inline-block;
  *display: inline;
  *zoom: 1;
  vertical-align: middle;
  color: #333;
}
.u-range:hover {
  border-color: #2664bb;
}
.u-range input {
  padding: 5px 5px;
  vertical-align: top;
  background: #fff;
  border: 1px solid #b3b3b3;
  height: 26px;
  line-height: 26px;
  outline: none;
  color: #b2b2b2;
  line-height: 16px;
  height: 16px;
  width: 40px;
}
.u-range:hover input {
  border-color: #2664bb;
  color: #333;
}
.u-upload .btn input {
  display: none;
}
.u-upload-name {
  line-height: 28px;
  vertical-align: middle;
}
.forms-un {
  margin-bottom: 15px;
  font-size: 14px;
}
.forms-un .name {
  width: 5em;
  line-height: 28px;
  display: inline-block;
  *display: inline;
  *zoom: 1;
  vertical-align: top;
}
.forms-un .tag {
  display: inline-block;
  *display: inline;
  *zoom: 1;
  background: #d8d8d8;
  color: #333;
  padding: 5px;
  line-height: 16px;
}
.forms-un .tag i {
  font-weight: bold;
  color: #818181;
  font-style: normal;
}
.forms-un .edit {
  margin-left: 5px;
  color: #2664bb;
  font-size: 12px;
  text-decoration: underline;
}
.forms-btns {
  padding: 10px 0;
  margin-left: 5.5em;
}
.forms-btns .btn {
  margin-right: 10px;
}
.forms-left {
  float: left;
  padding-right: 30px;
}
.forms-main {
  overflow: hidden;
}
